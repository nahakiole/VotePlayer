{% extends "index.twig" %}

{% block content %}
    <div class="container ">
        <!-- Example row of columns -->
        <div class="row">
            <div class="col-md-8 top30">

                <div class="title padding15">
                    <h2>Users</h2>
                </div>
                <div class="users padding15">
                    <a class="btn btn-primary btn-lg" href="{{ offset }}/Users/Add">Add User </a> <br/>
                    <div class="alert alert-success top10">User saved!</div>
                    <div class="table-responsive">
                        <table class="table table-hover table-striped">
                            <thead>
                            <tr>
                                <th>#</th>
                                <th>Username</th>
                                <th class="text-right">Action</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for user in users %}
                                <tr>
                                    <td>{{ user.id }}</td>
                                    <td>{{ user.username }}</td>
                                    <td class="text-right">
                                        <a class="btn btn-primary" href="{{ offset }}/Users/Edit/{{ user.id }}">Edit</a>
                                    </td>
                                </tr>
                            {% endfor %}

                            </tbody>
                        </table>

                    </div>
                    <ul class="pagination">
                       <!--<li><a href="#">&laquo;</a></li> -->

                       {% for page in pager %}
                        <li class="{{ page.active }}"><a href="{{ page.url }}">{{ page.number }}</a></li>
                       {% endfor %}

                       <!-- <li><a href="#">&raquo;</a></li> -->

                    </ul>


                </div>

            </div>
            <div class="col-md-4 top30">
                <div class="sidebar padding15">
                    <h2>Edit and add users</h2>

                    <p>Here you can edit, add or remove users. </p>


                </div>
            </div>
        </div>

    </div>


{% endblock %}
